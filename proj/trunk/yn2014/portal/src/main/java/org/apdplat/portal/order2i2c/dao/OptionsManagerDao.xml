<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apdplat.portal.order2i2c.dao.OptionsManagerDao">
	<insert id="insert" parameterType="java.util.Map">
	    INSERT INTO PMRT.TAB_MRT_YYT_ZD_CHECK(CHECK_MAN,WORK_FLOW_CODE,
	    GROUP_ID_1,CHECK_TIME,CHECK_RESULT,CHECK_IDEA) VALUES(#{username},
	    #{workNo},#{regionCode},SYSDATE,#{isAgree},#{options})
	</insert>
	
	<update id="save" parameterType="java.util.Map">
	    UPDATE PMRT.TAB_MRT_YYT_ZD_BASE SET CHECK_USER=#{username},
	    CHECK_TIME=SYSDATE,IS_YES=#{isAgree}
	    WHERE GROUP_ID_1=#{regionCode}
	</update>
</mapper>